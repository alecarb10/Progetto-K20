<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="550.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mvc.view.manager.gui.controller.EditTeamController">
   <children>
      <ComboBox fx:id="cmbBoxTournament" layoutX="30.0" layoutY="11.0" prefWidth="150.0" promptText="Select Tournament" />
      <ComboBox fx:id="cmbBoxTeam" layoutX="30.0" layoutY="50.0" prefWidth="150.0" promptText="Select Team" />
      <TitledPane animated="false" collapsible="false" layoutX="348.0" layoutY="115.0" prefHeight="172.0" prefWidth="215.0" text="Stadium">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="154.0" prefWidth="230.0">
               <children> 
                  <TextField fx:id="txtFldStadiumName" layoutX="16.0" layoutY="9.0" promptText="Name" />
                  <TextField fx:id="txtFldStadiumCity" layoutX="16.0" layoutY="41.0" promptText="City" />
                  <TextField fx:id="txtFldStadiumCapacity" layoutX="16.0" layoutY="74.0" promptText="Capacity" />
                  <Button fx:id="btnAddStadium" layoutX="16.0" layoutY="105.0" mnemonicParsing="false" onAction="#addStadium" prefHeight="25.0" prefWidth="60.0" text="Add" />
               </children>
            </AnchorPane>
        </content>
      </TitledPane>
      <TableView layoutX="15.0" layoutY="104.0" prefHeight="436.0" prefWidth="303.0">
        <columns>
            <TableColumn prefWidth="75.0" text="Name" />
          	<TableColumn prefWidth="75.0" text="Surname" />
          	<TableColumn prefWidth="75.0" text="Number" />
            <TableColumn prefWidth="75.0" text="Position" />
        </columns>
      </TableView>
      <TitledPane animated="false" collapsible="false" layoutX="348.0" layoutY="294.0" prefHeight="245.0" prefWidth="215.0" text="Player">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="txtFldPlayerName" layoutX="8.0" layoutY="12.0" promptText="Name" />
                  <TextField fx:id="txtFldPlayerSurname" layoutX="8.0" layoutY="51.0" promptText="Surname" />
                  <Spinner fx:id="spinnerPlayerNumber" layoutX="8.0" layoutY="85.0" />
                  <ComboBox fx:id="cmbBoxPlayerPosition" layoutX="8.0" layoutY="134.0" prefWidth="150.0" promptText="Position" />
                  <Button layoutX="84.0" layoutY="181.0" mnemonicParsing="false" text="Edit" />
                  <Button layoutX="139.0" layoutY="181.0" mnemonicParsing="false" text="Delete" />
                  <Button fx:id="btnAddPlayer" layoutX="14.0" layoutY="181.0" onAction="#addPlayer" mnemonicParsing="false" text="Add" />
               </children>
            </AnchorPane>
        </content>
      </TitledPane>
      
   </children>
</AnchorPane>
